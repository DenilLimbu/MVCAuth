                        <li id="MVCAuthentication" style="padding-left:15px;">
                            @Html.ActionLink("Send Email", "Email", "Home")
                        </li>

                        <li id="MVCAuthentication">
                            @Html.ActionLink("Contact Us", "Contact", "Home")
