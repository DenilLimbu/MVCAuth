                                            </div><!-- End Item -->
                                            <div class="item">
                                                <a href="http://localhost:6218/Video/NecastlePromo"><img src="~/Images/s6.png" class="img-responsive" alt="product 3"></a>
                                                <h4><small>Newcastle United Clinch Promotions</small></h4>
                                                @*<button class="btn btn-primary" type="button">49,99 €</button> <button href="#" class="btn btn-default" type="button"><span class="glyphicon glyphicon-heart"></span> Add to Wishlist</button>*@
                                            </div><!-- End Item -->
                                        </div><!-- End Carousel Inner -->
                                    </div><!-- /.carousel -->
