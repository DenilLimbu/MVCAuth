                                    <li><a href="http://localhost:6218/Home/Index">View all the Videos<span class="glyphicon glyphicon-chevron-right pull-right"></span></a></li>
                                </ul>
                            </li>
                            <li class="col-sm-3">
                                <ul>
                                    <li class="dropdown-header">League</li>
                                    <li><a href="https://localhost:44388/Home/EplLeague">English Premiere League</a></li>
                                    <li><a href="https://localhost:44388/Home/GermanLeague">German Bundesliga</a></li>
